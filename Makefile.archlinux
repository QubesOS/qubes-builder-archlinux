  $(info ║ TARGET_REPO:           $(TARGET_REPO))            #
  $(info ║ SNAPSHOT_REPO:         $(SNAPSHOT_REPO))          #
  $(info ║ SNAPSHOT_FILE:         $(SNAPSHOT_FILE))          #
  $(info ║ REPO_PROXY:            $(REPO_PROXY))             #
